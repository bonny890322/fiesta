<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/img_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:shape="ring"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.network.fiesta.PrettyImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:outlineProvider="background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_type="SHAPE_CIRCLE"
            app:show_border="false" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gen_jyuu_gothic_regular"
        android:text="Tag"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_box"
        app:layout_constraintRight_toRightOf="@+id/img_box"
        app:layout_constraintTop_toBottomOf="@+id/img_box" />
</androidx.constraintlayout.widget.ConstraintLayout>