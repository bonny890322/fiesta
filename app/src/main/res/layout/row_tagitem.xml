<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_border"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:src="@drawable/ui_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/img_tag"
        app:layout_constraintLeft_toLeftOf="@+id/img_tag"
        app:layout_constraintRight_toRightOf="@+id/img_tag"
        app:layout_constraintTop_toTopOf="@+id/img_tag" />

    <com.network.fiesta.PrettyImageView
        android:id="@+id/img_tag"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_type="SHAPE_CIRCLE"
        app:show_border="false" />

    <TextView
        android:id="@+id/tv_tagname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gen_jyuu_gothic_regular"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/img_tag"
        app:layout_constraintStart_toStartOf="@+id/img_tag"
        app:layout_constraintTop_toBottomOf="@+id/img_tag" />


</androidx.constraintlayout.widget.ConstraintLayout>