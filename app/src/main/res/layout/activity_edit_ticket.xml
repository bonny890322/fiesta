<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/temp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@color/orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_qrcode"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ui_qrcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_ticketsell"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ui_ticketsell"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_edit"
        app:layout_constraintTop_toBottomOf="@+id/img_qrcode" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ui_edit"
        app:layout_constraintLeft_toRightOf="@+id/img_ticketsell"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_qrcode" />

    <ImageView
        android:id="@+id/img_lotto"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ui_lotto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_feedback"
        app:layout_constraintTop_toBottomOf="@+id/img_ticketsell" />

    <ImageView
        android:id="@+id/img_feedback"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ui_feedback"
        app:layout_constraintLeft_toRightOf="@+id/img_lotto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ticketsell" />

    <!-- 線條 -->
    <ImageView
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:src="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/img_ticketsell"
        app:layout_constraintLeft_toRightOf="@+id/img_ticketsell"
        app:layout_constraintRight_toLeftOf="@+id/img_edit"
        app:layout_constraintTop_toTopOf="@+id/img_ticketsell" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:src="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/img_lotto"
        app:layout_constraintLeft_toRightOf="@+id/img_feedback"
        app:layout_constraintRight_toLeftOf="@+id/img_lotto"
        app:layout_constraintTop_toTopOf="@+id/img_lotto" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:src="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/img_lotto"
        app:layout_constraintLeft_toLeftOf="@+id/img_ticketsell"
        app:layout_constraintRight_toRightOf="@+id/img_ticketsell"
        app:layout_constraintTop_toBottomOf="@+id/img_ticketsell" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:src="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/img_feedback"
        app:layout_constraintLeft_toLeftOf="@+id/img_edit"
        app:layout_constraintRight_toRightOf="@+id/img_edit"
        app:layout_constraintTop_toBottomOf="@+id/img_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>
