<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="創建活動"
        android:textColor="@color/black"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:src="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp1" />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="選擇你想使用的進階功能"
        android:textColor="@color/deeporange"
        android:fontFamily="@font/gen_jyuu_gothic_heavy"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp1" />

    <TextView
        android:id="@+id/temp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#B9B9B9"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="可自由選擇是否開啟進階功能，不開啟也可直\n接創建活動。"
        android:fontFamily="@font/gen_jyuu_gothic_medium"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp2" />


    <!--**************************************************************************-->

    <TextView
        android:id="@+id/temp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="進階電子票據"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        app:layout_constraintEnd_toStartOf="@+id/temp5"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temp12"
        app:layout_constraintTop_toBottomOf="@+id/temp3" />

    <TextView
        android:id="@+id/temp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:text="說明"
        android:fontFamily="@font/gen_jyuu_gothic_normal"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/switch_1"
        app:layout_constraintLeft_toRightOf="@+id/temp4"
        app:layout_constraintTop_toTopOf="@+id/temp4" />

    <Switch
        android:id="@+id/switch_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/temp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp5" />

    <ImageView
        android:id="@+id/temp12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:src="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp4" />

    <TextView
        android:id="@+id/temp6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="活動即時資訊"
        android:textColor="@color/black"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/temp7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temp4"
        app:layout_constraintTop_toBottomOf="@+id/temp4" />

    <TextView
        android:id="@+id/temp7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:text="說明"
        android:fontFamily="@font/gen_jyuu_gothic_normal"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/switch_2"
        app:layout_constraintLeft_toRightOf="@+id/temp6"
        app:layout_constraintTop_toTopOf="@+id/temp6" />

    <Switch
        android:id="@+id/switch_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/temp7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp7" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:src="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp6" />

    <TextView
        android:id="@+id/temp8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="線上抽獎"
        android:textColor="@color/black"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/temp7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temp4"
        app:layout_constraintTop_toBottomOf="@+id/temp6" />

    <TextView
        android:id="@+id/temp9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:text="說明"
        android:fontFamily="@font/gen_jyuu_gothic_normal"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/switch_3"
        app:layout_constraintLeft_toRightOf="@+id/temp8"
        app:layout_constraintTop_toTopOf="@+id/temp8" />

    <Switch
        android:id="@+id/switch_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/temp9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:src="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp8" />

    <TextView
        android:id="@+id/temp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="公布通知"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        app:layout_constraintEnd_toStartOf="@+id/temp7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temp4"
        app:layout_constraintTop_toBottomOf="@+id/temp8" />

    <TextView
        android:id="@+id/temp11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:text="說明"
        android:fontFamily="@font/gen_jyuu_gothic_normal"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/switch_4"
        app:layout_constraintLeft_toRightOf="@+id/temp10"
        app:layout_constraintTop_toTopOf="@+id/temp10" />

    <Switch
        android:id="@+id/switch_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/temp11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp11" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:src="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp10" />

    <!--**************************************************************************-->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/gray"
        android:text="取消"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_finish" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_finish"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/orange"
        android:text="創建活動"
        android:fontFamily="@font/gen_jyuu_gothic_bold"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/img_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:src="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ProgressBar
        android:id="@+id/progress_Bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminate="true"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>